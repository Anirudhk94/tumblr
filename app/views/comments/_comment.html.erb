<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= comment.name %></strong></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_title"><%= time_ago_in_words(comment.created_at) %> ago | 
			<%= link_to "Delete", post_comment_path(comment), method: :delete,data: { confirm: "Are you sure?"} %> </p>
	</div>
</div>